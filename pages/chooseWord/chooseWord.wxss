/* pages/chooseWord/chooseWord.wxss */

.card {
  margin-left: 25rpx;
  width: 700rpx;
  margin-top: 25rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
  border-radius: 10rpx;
  position: relative;
}

.word {
  font-size: 40rpx;
  font-weight: 650;
  margin: 0 0 5rpx 35rpx;
  padding-top: 15rpx;
}

.block {
  position: fixed;
  bottom: 0rpx;
  height: 130rpx;
  width: 100%;
  background-color: white;
}

.edit {
  background: linear-gradient(to right, rgba(0, 0, 0, 0), white, white);
  width: 500rpx;
  height: 200rpx;
  position: absolute;
  right: 0rpx;
  border-radius: 10rpx;
}

.notification {
  font-size: 45rpx;
  position: absolute;
  right: 35rpx;
  top: 20rpx;
}

.hover {
  width: 150rpx;
  height: 100%;
  position: absolute;
  right: 0rpx;
  display: flex;
  justify-content: center;
}

.hover2 {
  align-self: center;
  text-align: center;
}

.icon {
  width: 50rpx;
  height: 50rpx;
}